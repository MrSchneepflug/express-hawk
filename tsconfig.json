{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "declaration": true,
    "rootDir": "src/",
    "outDir": "dist/"
  },
  "exclude": [
    "dist/",
    "test/"
  ]
}
